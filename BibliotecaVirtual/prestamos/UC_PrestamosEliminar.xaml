<UserControl x:Class="BibliotecaVirtual.prestamos.UC_PrestamosEliminar"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             mc:Ignorable="d" Height="401.887" Width="590.094">
    <Grid>
        <GroupBox Header="Eliminar Prestamo" HorizontalAlignment="Left" Margin="10,10,0,0" VerticalAlignment="Top" Height="311" Width="570" FontFamily="Trebuchet MS" FontSize="18" FontWeight="Bold">
            <StackPanel Margin="10,10,-2,13">
                <Label Content="Run:" FontSize="14" Foreground="White"/>
                <Grid>

                    <TextBox x:Name="txt_run" Height="23" TextWrapping="Wrap" Margin="0,0,212,0" FontSize="14" FontWeight="Normal"/>
                    <Button Content="Buscar" Margin="359,0,10,0" Click="Button_Click" FontSize="14"/>
                </Grid>
                <Label Content="Nombre:" FontSize="14" Foreground="White"/>
                <TextBox x:Name="txt_nombre" Height="23" TextWrapping="Wrap" IsEnabled="False" FontSize="14" FontWeight="Normal"/>
                <Label Content="Apellido:" FontSize="14" Foreground="White"/>
                <TextBox x:Name="txt_apellido" Height="23" TextWrapping="Wrap" IsEnabled="False" FontSize="14" FontWeight="Normal"/>
                <Label Content="Email:" FontSize="14" Foreground="White"/>
                <TextBox x:Name="txt_email" Height="23" TextWrapping="Wrap" IsEnabled="False" FontSize="14" FontWeight="Normal"/>
                <Label Content="Dirección:" FontSize="14" Foreground="White"/>
                <TextBox x:Name="txt_direccion" Height="23" TextWrapping="Wrap" IsEnabled="False" FontSize="14" FontWeight="Normal"/>
            </StackPanel>
        </GroupBox>
        <Button Name="btn_guardar" HorizontalAlignment="Left" Margin="505,326,0,0" VerticalAlignment="Top" Width="75" Height="55" Background="{x:Null}" BorderBrush="{x:Null}" ToolTip="Guardar" Click="btn_guardar_Click">
            <DockPanel Height="55" LastChildFill="False" Width="75">
                <DockPanel.Background>
                    <ImageBrush ImageSource="/BibliotecaVirtual;component/Source/Icons/mantenedor/ic_checkmark.png"/>
                </DockPanel.Background>
            </DockPanel>
        </Button>
        <Button Name="btn_cancelar" HorizontalAlignment="Left" Margin="430,326,0,0" VerticalAlignment="Top" Width="75" Height="55" Background="{x:Null}" BorderBrush="{x:Null}" ToolTip="Limpiar" Click="btn_cancelar_Click">
            <DockPanel Height="55" LastChildFill="False" Width="75">
                <DockPanel.Background>
                    <ImageBrush ImageSource="/BibliotecaVirtual;component/Source/Icons/mantenedor/ic_cross.png"/>
                </DockPanel.Background>
            </DockPanel>
        </Button>
    </Grid>
</UserControl>
